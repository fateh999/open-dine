# Build the docker image with `npx nx docker-build admin-panel`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t admin-panel`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system admin-panel && \
          adduser --system -G admin-panel admin-panel

COPY dist/apps/admin-panel admin-panel/
RUN chown -R admin-panel:admin-panel .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix admin-panel --omit=dev -f install

CMD [ "node", "admin-panel" ]
