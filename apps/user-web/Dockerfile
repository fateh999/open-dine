#
# Build the docker image with `npx nx docker-build user-web`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t user-web`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system user-web && \
          adduser --system -G user-web user-web

COPY apps/user-web/.next user-web/
RUN chown -R user-web:user-web .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix user-web --omit=dev -f install

CMD [ "node", "user-web" ]
